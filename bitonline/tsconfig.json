{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
		"paths": {
			"@page/*": ["./src/components/page/*"],
			"@template": ["./src/components/template/components/*"],
			"@components/*": ["./src/components/*"],
			"@context/*": ["./src/context/"],
			"@hooks": ["./src/hooks"],
			"@data": ["./src/data"],
			"@utils": ["./src/utils"],
			"@public/*": ["./public/*"],
			"@/*": ["./*"]
		}
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/utils/index.js", "src/utils/convertNumber/convert.js"],
  "exclude": ["node_modules"]
}
